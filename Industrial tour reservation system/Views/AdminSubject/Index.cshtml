@model IEnumerable<Industrial_tour_reservation_system.Models.Subject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div style="margin-top:100px;">
    @Html.ActionLink("Create New", "CreateSubject")
</div>
<div style="min-height:450px">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditSubject", new { id = item.SubjectID }) |
                    @Html.ActionLink("Details", "SubjectDetails", new { id = item.SubjectID }) |
                    @Html.ActionLink("Delete", "DeleteSubject", new { id = item.SubjectID })
                </td>
            </tr>
        }

    </table>
</div>