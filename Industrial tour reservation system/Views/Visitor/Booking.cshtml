@model Industrial_tour_reservation_system.ViewModels.UserBookingView
@{
    ViewBag.Title = "Booking";
}

<h2>Booking</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>VisitorBooking</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Visitor.VisitorID)
    <div class="form-group">
        @Html.LabelFor(model => model.Package.PackageName, "PackageID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(x => x.Package.PackageID, new SelectList(Model.Package_List, "PackageID", "PackageName"), "Select Subject", new { @class = "form-control", type = "number" })
            @Html.ValidationMessageFor(model => model.Package.PackageID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "MainPage")
</div>
